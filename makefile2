CC = g++
INC = -Iinclude
LIB = -Lglew/lib

CFLAGS = -lGLU -lGL -lGLEW  `sdl2-config --cflags --libs `
DEPS = SDL.h


SRC = app.cpp player.cpp
OBJ = $(SRC:.cpp=.o)

%.o: %.cpp
	$(CC) -c -g -o $@ $< $(CFLAGS)

engine: $(OBJ)
	$(CC) -o engine $(OBJ) $(INC) $(LIB) $(CFLAGS)

clean:
	rm -r $(OBJ)

depend: $(SRC)
	makedepend $(INC) $^ : Starting Loop

# DO NOT DELETE THIS LINE -- make depend needs it

